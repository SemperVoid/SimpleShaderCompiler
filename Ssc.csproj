<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <RootNamespace>Ssc</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
    <PackageReference Include="Vortice.D3DCompiler" Version="3.7.4-beta" />
    <PackageReference Include="Vortice.Dxc" Version="3.7.4-beta" />
    <PackageReference Include="Vortice.ShaderCompiler" Version="1.8.0" />
  </ItemGroup>

</Project>
